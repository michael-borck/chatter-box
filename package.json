{
  "name": "talkbuddy-desktop",
  "version": "2.0.0",
  "description": "TalkBuddy - AI-powered conversation practice desktop app",
  "main": "src/main/index.js",
  "homepage": "./",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron-dev": "electron .",
    "electron:dev": "concurrently -k \"npm run dev\" \"wait-on tcp:3000 && electron . --dev\"",
    "electron:dev-nosandbox": "concurrently -k \"npm run dev\" \"wait-on tcp:3000 && electron . --dev --no-sandbox\"",
    "electron:build": "npm run build && electron-builder",
    "electron:dist": "npm run build && electron-builder --publish=never",
    "electron:dist-all": "npm run build && electron-builder -mwl --publish=never"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.0",
    "better-sqlite3": "^9.2.2",
    "electron-is-dev": "^2.0.0",
    "lucide-react": "^0.316.0"
  },
  "devDependencies": {
    "electron": "^28.1.3",
    "electron-builder": "^24.9.1",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/better-sqlite3": "^7.6.8",
    "@vitejs/plugin-react": "^4.2.1",
    "vite": "^5.0.11",
    "typescript": "^5.3.3",
    "tailwindcss": "^3.4.1",
    "autoprefixer": "^10.4.17",
    "postcss": "^8.4.33",
    "@testing-library/react": "^14.1.2",
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/user-event": "^14.5.2"
  },
  "build": {
    "appId": "com.talkbuddy.desktop",
    "productName": "TalkBuddy",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "src/main/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.education",
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  },
  "browserslist": {
    "production": [
      "last 1 electron version"
    ],
    "development": [
      "last 1 electron version"
    ]
  }
}
